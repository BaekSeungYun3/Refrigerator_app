<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WCamera_Activty">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backicon2"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/backicon"
            tools:ignore="SpeakableTextPresentCheck"  />

        <TextView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="1.5"
            android:text="" />
    </LinearLayout>

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/square" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">


        <EditText
            android:id="@+id/camertxt"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:background="@drawable/base_edittext"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="25sp"
            app:cornerRadius="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/resulttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="" />
    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cameraBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@drawable/base_edittext"
                android:padding="8dp"
                android:text="다시 촬영"
                android:textAlignment="center"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="596dp" />

            <TextView
                android:id="@+id/ocr_btn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@drawable/base_edittext"
                android:padding="8dp"
                android:text="유통기한 인식"
                android:textAlignment="center"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="596dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/resultOCR"
            android:layout_marginTop="300dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
        <ImageView
            android:id="@+id/ocrView"
            android:layout_width="430dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/square" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>