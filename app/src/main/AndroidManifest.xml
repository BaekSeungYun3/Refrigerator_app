            android:name=".Dialogadd_Activity"
            android:exported="false" />
        <activity
            android:name=".Profile_Activity"
            android:exported="false" />
        <activity
            android:name=".Cart_Activity"
            android:exported="false" />
        <activity
            android:name=".Recipe_Activity"
            android:exported="false" />
        <activity
            android:name=".Community_Activity"
            android:exported="false" />
